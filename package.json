  "scripts": {
    "api": "node mocks/server.js",
    "api:watch": "nodemon mocks/server.js --watch mocks",
    "server": "npm-run-all -p -r api:watch webpack-dev-server",
    "build": "webpack --config config/webpack/dev.config.ts",
    "build:prod": "webpack --config config/webpack/prod.config.ts",
    "lint:ts": "tslint **/*.tsx **/*.ts -c config/tslint.json",
    "test": "jest",
    "webpack-dev-server": "webpack-dev-server --open --config config/webpack/dev.config.ts --env.mockPort 9011 --env.mockPath /mocks"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "reports/jest",
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
